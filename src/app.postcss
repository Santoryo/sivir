/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
  @apply h-full overflow-hidden smooth scroll-smooth;
}

.skincard {
  -moz-box-shadow: inset 0 -100px 100px -100px #000000;
  -webkit-box-shadow: inset 0 -100px 100px -100px #000000;
  box-shadow: inset 0 -100px 100px -100px #000000;
  cursor: pointer;
}

.skincardinfo {
  text-shadow: 0px 0px 10px black, 0px 0px 10px black, 0px 0px 10px black;
  @apply pb-2 text-xs lg:text-sm;
}

.smooth {
  @apply transition-all duration-200 ease-linear;
}

.frame {
  @apply h-32 w-32 lg:h-72 lg:w-72 bg-cover relative flex justify-center uppercase font-semibold skincard rounded-md border border-gray-800 hover:border-gray-600 smooth text-white hover:scale-105;
}

.frame-special {
  @apply h-32 w-full lg:h-72 lg:w-[720px] aspect-[1280/513] bg-cover relative flex justify-center uppercase font-semibold skincard rounded-md border border-gray-800 hover:border-gray-600 smooth text-white hover:scale-105;
}

.frame-under {
    @apply  h-32 w-32 lg:h-72 lg:w-72 bg-cover relative flex justify-center uppercase font-semibold skincard rounded-md;
}

.dark-mode {
  filter: brightness(0) invert(1);
}

.light-mode {
  filter: brightness(0) invert(0);
}

.nav-icon {
  filter: brightness(0);
  @apply h-4 w-4 bg-cover inline-block bg-center mr-2 dark:invert dark:brightness-0 smooth;
}

.caroseul {
  aspect-ratio: 16 / 9;
  @apply bg-red-500 w-[588px] h-[388px];
}

.embla {
  overflow: hidden;
  @apply rounded-md;
}

.embla__xd {
  width: 120px;
  @apply rounded-md bg-cover bg-center;
}

.embla__container {
  aspect-ratio: 588 / 388;
  display: flex;
}

.embla__slide {
  flex: 0 0 100%;
  min-width: 0;
}

.small-icon {
  @apply h-[15px] w-[15px] bg-cover inline-block bg-center
}

.big-icon {
  @apply h-[25px] w-[25px] bg-cover inline-block bg-center
}

#purple {
  @apply bg-purple-500;
}

#red {
  @apply bg-red-500;
}

#blue {
  @apply bg-blue-500;
}

#yellow {
  @apply bg-yellow-500;
}

#orange {
  @apply bg-orange-500;
}
